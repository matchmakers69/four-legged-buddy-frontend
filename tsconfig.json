{
  "compileOnSave": false,
  "compilerOptions": {
    /* Paths */
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "src/*": ["src/*"],
      "styles/*": ["src/styles/*"]
    },

    /* Project */
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "sourceMap": true,

    /* Imports */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,

    /* Additional */
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "next-i18next.config.js"],
  "exclude": ["node_modules", "dist", "coverage", ".next"]
}
